.\" ***************************
.\" ******** module nh ********
.\" ***************************
.\" Numbered headings.
.\" nh*hl is the level of the last heading
.nr nh*hl 0
.nr H0 0
.ds APPENDIX Appendix
.\" start appendix
.de AP
.nr H\\$1 0
.nr nh*AP\\$1 1
.if \\$1<2 .af H\\$1 A
..
.\" numbered heading
.ds nh*SNprefix
.ds nh*SNsuffix
.ds nh*SHtitle
.de @NH
.ie '\\$1'S' \{\
.tm \\$@
.	shift
.	nr nh*hl 0
.	while \\n[.$] \{\
.		nr nh*hl +1
.		nr H\\n[nh*hl] 0\\$1
.		shift
.	\}
.	if !\\n[nh*hl] \{\
.		nr H1 1
.		nr nh*hl 1
.		@error missing arguments to .NH S
.	\}
.\}
.el \{\
.	nr nh*ohl \\n[nh*hl]
.	ie \\n[.$] \{\
.		nr nh*hl 0\\$1
.		ie \\n[nh*hl]<=0 \{\
.			nr nh*ohl 0
.			nr nh*hl 1
.		\}
.		el \{\
.			if \\n[nh*hl]-\\n[nh*ohl]>1 \
.				@warning .NH \\n[nh*ohl] followed by .NH \\n[nh*hl]
.		\}
.	\}
.	el .nr nh*hl 1
.	while \\n[nh*hl]>\\n[nh*ohl] \{\
.		nr nh*ohl +1
.		nr H\\n[nh*ohl] 0
.	\}
.	nr H\\n[nh*hl] +1
.	shift
.\}
.ie \\n[.$] .ds nh*SHtitle \\$*
.el .ds nh*SHtitle
.ds SN
.nr nh*i 0
.while \\n[nh*i]<\\n[nh*hl] \{\
.	nr nh*i +1
.	as SN \\n[H\\n[nh*i]].
.\}
.if r nh*AP\\n[nh*hl] .if \\n[nh*AP\\n[nh*hl]] .ds nh*SNprefix \\*[APPENDIX] 
.if !'\\*[nh*SHtitle]'' .ds nh*SHtitle \\*[nh*SNprefix]\\*[SN]\\*[nh*SNsuffix] \\*[nh*SHtitle]
.SH \\*[nh*SHtitle]
\\*[nh*SNprefix]\\*[SN]\\*[nh*SNsuffix]
..
.de AX
.ds nh*SNprefix
.ie \\n[.$] .nr nh*AP\\$1 0
.el \{\
.	nr hl 0
.	while r \\n[H\\n(hl] .nr hl +1
.	nr ni 1
.	while \\n(ni<=\\n(hl \{\
.		nr nh*AP\\n(ni 0
.		nr ni +1
.	\}
.\}
