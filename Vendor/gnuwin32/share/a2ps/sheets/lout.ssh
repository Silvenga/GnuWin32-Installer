operators are
#  (/def[\t ]*(\\@[a-zA-Z0-9_]+)/ \1 Keyword_strong)
  (/(\\@[a-zA-Z0-9_]+)/ \1 Keyword_strong),

	"//",
	"/",
	"^/",
	"&",
	"^|",
	"|"
end operators

sequences are
    "#"                     Comment,
    C-string
end sequences

end style
