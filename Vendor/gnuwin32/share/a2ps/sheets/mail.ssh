   =B4 "\xb4",  =B5 "\xb5",  =B6 "\xb6",  =B7 "\xb7",  =B8 "\xb8",
   =B9 "\xb9",  =BA "\xba",  =BB "\xbb",  =BC "\xbc",  =BD "\xbd",
   =BE "\xbe",  =BF "\xbf",  =C0 "\xc0",  =C1 "\xc1",  =C2 "\xc2",
   =C3 "\xc3",  =C4 "\xc4",  =C5 "\xc5",  =C6 "\xc6",  =C7 "\xc7",
